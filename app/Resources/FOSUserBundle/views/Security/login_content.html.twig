{% trans_default_domain 'FOSUserBundle' %}

<div class="row" id="pwd-container">
    <div class="col-md-4"></div>

    <div class="col-md-4">
        <section class="login-form">
            {% if error %}
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
                </div>
            {% endif %}
            <form class="no-border-radius" action="{{ path("fos_user_security_check") }}" method="post" role="login">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                {% endif %}

                <div class="form-group">
                    <label for="username">
                        <i class="fa fa-user" aria-hidden="true"></i> {{ 'security.login.username'|trans }}
                    </label>
                    <input type="text" class="form-control no-border-radius" id="username" name="_username"
                           value="{{ last_username }}" required="required"/>
                </div>

                <div class="form-group">
                <label for="password">
                    <i class="fa fa-lock" aria-hidden="true"></i> {{ 'security.login.password'|trans }}
                </label>
                <input type="password" id="password" class="form-control no-border-radius" name="_password"
                       required="required"/>
                </div>
                <div class="form-group">

                <input type="submit" class="btn btn-primary btn-block no-border-radius" id="_submit" name="_submit"
                       value="{{ 'security.login.submit'|trans }}"/>
                </div>
            </form>

            <div class="form-links">
                Nie masz konta? <a href="{{ path('register') }}">Zarejestruj siÄ™</a>
            </div>
        </section>
    </div>

    <div class="col-md-4"></div>
</div>


